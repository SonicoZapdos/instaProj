@{
    ViewData["Title"] = "Bem-Te-Vi";
}



<div class="row" style="width: 100%; height: 100%">
    <div class="col vlr no-config" style="height: 100%">
        <partial name="Menu" />
    </div>
    <div class="col-6 no-config" style="height: 100%" id="mainContainer">
        <partial name="ForYou" /> @{/* - Partial Indexar uma página na outra - */}
    </div>
    <div class="col vll no-config" style="height: 100%">
        <partial name="Follows" />
    </div>
</div>

<script>
    var main = document.getElementById('mainContainer');

    function Perfil() {
        clearMain();
        var partial = document.createElement('partial');
        partial.name = 'User';
        main.appendChild(partial);
    }

    function clearMain() {
        if (main.contains('forYou')) {
            main.removeChild('forYou');
        }
        if (main.contains('user')) {
            main.removeChild('user');
        }
    }
</script>

<style>
    .select:hover {
        background-color: whitesmoke;
    }

    .no-config {
        padding: 0px;
        margin: 0px;
    }

    .row {
        margin: 0px;
    }

    .col {
        height: 100%;
    }

    .vll {
        border-left: 1px solid #dee2e6;
        box-shadow: 0px -2px 2px 2px #dee2e6;
    }

    .vlr {
        border-right: 1px solid #dee2e6;
        box-shadow: 0px 2px 2px 2px #dee2e6;
    }
</style>


