<div class="d-flex flex-column align-items-center maxW justify-content-between" style="height:100%; padding-top: 5rem;">
    <div class="d-flex flex-column maxW">
        <div class="d-flex gap-3 align-items-center justify-content-start ps-4">
            <div class="logo">
                <img src="/images/ppic.png" alt="" class="user">
            </div>
            <h2 class="no-config">@ViewBag.User.Name</h2>
        </div>
        <br />
        <div class="col">
            <a asp-action="Main" asp-controller="Aplication" asp-route-page="ForYou" class="maxW d-flex gap-2 align-items-center p-4 ps-5 select btn">
                <span class="material-symbols-outlined">
                    home
                </span>
                <h4 class="no-config">Home</h4>
            </a>
            <a asp-action="Main" asp-controller="Aplication" asp-route-page="MyPage" class="maxW d-flex gap-2 align-items-center p-4 ps-5 btn select">
                <span class="material-symbols-outlined">
                    person
                </span>
                <h4 class="no-config">Perfil</h4>
            </a>
            <div class="d-flex gap-2 align-items-center p-4 ps-5 select">
                <span class="material-symbols-outlined">
                    settings
                </span>
                <h4 class="no-config">Configurações</h4>
            </div>
            <div class="d-flex align-items-center gap-2 p-4 ps-5 select" data-bs-toggle="modal" data-bs-target="#npm-modal">
                <span class="material-symbols-outlined">
                    add
                </span>
                <h4 class="no-config">
                    Novo Post
                </h4>
            </div>
        </div>
        <hr class="maxW" />
    </div>

    <a asp-action="Logout" asp-controller="Users" class="maxW d-flex gap-2 align-items-center p-4 ps-5 btn select">
        <span class="material-symbols-outlined">
            logout
        </span>
        <h4 class="no-config">Logout</h4>
    </a>
</div>

<div class="modal" tabindex="-1" id="npm-modal">
    <div class="modal-dialog modal-dialog-centered d-flex justify-content-center align-items-center" style="max-width: none">
        <div class="modal-content" style="width: 50vw">
            <div class="modal-header">
                <h5 class="modal-title" id="npm-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="npm-body">
                <partial name="NewPost" />
            </div>
        </div>
    </div>
</div>

<script>
    function Redirect(id) {
        var a = document.getElementById(id);
        console.log(a);
        a.click;
    }
</script>