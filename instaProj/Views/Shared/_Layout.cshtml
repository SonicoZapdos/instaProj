<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - instaProj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/instaProj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet" />
</head>

<body style="margin-bottom: 0px; height: 100vh">
    <header style="height: 8vh">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom">
            <div class="row" style="width: 100%;">
                <div class="col d-flex justify-content-start gap-3">
                    <div class="logo">
                        <img src="~/images/BTVlg.png" class="logo" />
                    </div>
                    <a class="navbar-brand fontLg" asp-area="" asp-controller="Users"
                        asp-action="verifyLogin" style="color: #f4f440;">Bem-Te-Vi</a>
                </div>
                <div class="group">
                    <span class="material-symbols-outlined no-config icon" style="width: auto;">search</span>
                    <input placeholder="Search" type="search" class="input" />
                </div>
                <div class="col"></div>
            </div>
        </nav>
    </header>
    <main role="main" style="width: 100%; height: 92vh">
        @RenderBody()
    </main>
</body>

</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

<style>
    * {
        -webkit-user-select: none;
    }

    body {
        background-color: #e8e8e8;
    }

    .navbar {
        background-color: #292929;
    }

    .maxW {
        width: 100%;
    }

    .logo {
        width: 40px;
        height: 40px;
        border-radius: 100%;
    }

    .group {
        display: flex;
        line-height: 28px;
        align-items: center;
        position: relative;
        max-width: 40%;
    }

    .input {
        width: 100%;
        height: 40px;
        line-height: 28px;
        padding: 0 1rem;
        padding-left: 2.5rem;
        border: 2px solid transparent;
        border-radius: 8px;
        outline: none;
        background-color: #F6F6F6;
        color: #0d0c22;
        transition: .3s ease;
    }

    .input::placeholder {
        color: #9e9ea7;
    }

    .input:focus,
    input:hover {
        outline: none;
        border-color: #f4f440;
        background-color: #fff;
        box-shadow: 0 0 0 4px #f4f4408e;
    }

    .icon {
        position: absolute;
        left: 1rem;
        fill: #9e9ea7;
        width: auto;
    }
</style>
